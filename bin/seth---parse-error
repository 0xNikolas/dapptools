#!/usr/bin/env bash
response=`cat`
exec >&2
echo -n "seth: error: rpc: "
[[ $response ]] || { echo empty response; exit 1; }
get() { jshon -Q <<<"$response" $* | tr -d "\n"; }
get -e error -e message -u || { echo bad response: "$response"; exit 1; }
get -e error -e code -u | sed "s/.*/ [error code &]/"
get -e error -e data -u | sed "s/^/# /"
echo
