#!/usr/bin/env bash
set -e
result=$(seth rpc eth_syncing)
if [[ $result = false ]]; then
  seth rpc eth_blockNumber
else
  highest=$(echo "$result" | grep -oP "^highestBlock\\s*\K.*")
  current=$(echo "$result" | grep -oP "^currentBlock\\s*\K.*")
  echo $((current))/$((highest)) [$((current * 100 / highest))%]
fi
