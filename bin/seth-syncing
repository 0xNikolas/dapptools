#!/usr/bin/env bash
set -e
result=`seth rpc eth_syncing`
if [[ $result = false ]]; then
  block=`seth rpc eth_blockNumber`
  echo $block [not syncing]
else
  b0=`seth field-value "$result" startingBlock`
  b=` seth field-value "$result" currentBlock`
  b1=`seth field-value "$result" highestBlock`
  echo $((b))/$((b1)) [$(((b - b0) * 100 / (b1 - b0)))]
fi
