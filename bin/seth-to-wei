#!/usr/bin/env bash
### seth-to-wei -- convert to wei from any other ether unit
### Usage: seth to-wei <money> [<unit>]
### Convert <money> (must be `<number> <unit>') into a number of wei.
### Recognized units are `ETH', `Gwei' and `wei'.

set -e
set -- $*
unit=${2-wei}

case ${unit,,} in
  wei)  scale=0;;
  gwei) scale=9;;
  eth)  scale=18;;
  *)
    echo >&2 "${0##*/}: error: unrecognized money: $money"
    exit 1
esac

bc <<<"$1 * 10^$scale / 1"
