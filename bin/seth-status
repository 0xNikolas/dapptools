#!/usr/bin/env bash
### seth-status -- display client and network status information

set -e
seth client-version >/dev/null

commands=(
  blockchain
  client
  protocol
  gas-price
  mining
  hashrate
  peer-count
  syncing
)

for command in ${commands[*]}; do
  value=`seth $command || echo -`
  printf "%-15s %s\n" "$command" "$value" &
done | LANG=C sort
wait
