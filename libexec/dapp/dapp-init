#!/usr/bin/env bash
set -o noclobber
mk() { cat >$1; (set -x; git add $1); }
name=$(basename $(pwd))
(set -x; git init)
(set -x; mkdir -p lib src)
mk .gitignore <<.
/out
.
mk Makefile <<.
all:; dapp build
test: all; dapp test
.
mk Dappfile <<.
name            $name
description
version         0.0.1

author          $(whoami)
license         Apache-2.0
.
git add -A
dapp --commit "$0" "$name"
echo OK.
