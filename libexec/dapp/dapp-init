#!/usr/bin/env bash
set -x -o noclobber
git init
mk() { cat >$1; git add $1; }
mk .gitignore <<.
/build
.
mk Makefile <<.
all:; dapp build
test:; dapp test
.
mk ERC190.json <<.
{
  "package_name": "$(basename $(pwd))",
  "version": "0.1.0",
  "meta": {
    "description": "",
    "license": "",
    "authors": [
    ],
    "keywords": [
    ]
  },
  "dependencies": {
  },
  "deployments": {
  }
}
.
mkdir -p lib src
dapp --save "$0" "$@"
