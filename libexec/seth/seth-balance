#!/usr/bin/env bash
### seth-balance -- show the balance of an address on the blockchain
### Usage: seth balance [-b <block>] <account>
### Print the balance associated with <account>.
###
### If `-b' is given, print the balance as of <block>.

set -e
wei=`seth --jsonrpc eth_getBalance \
  -s "${1?missing account}" -iappend \
  -s ${SETH_BLOCK-latest} -iappend`
seth --to-eth "$wei"
