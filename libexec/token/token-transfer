#!/usr/bin/env bash
### token-transfer -- transfer tokens from one account to another
### Usage: token transfer <token> <recipient> <amount> [<source>]
### Note: <amount> must be an integer representing wei (or equivalent).
set -e
[[ $# = [34] ]] || { token transfer --help >&2; exit 1; }
x=$(token parse "$3")
if [[ $# = 3 ]]; then
  seth send "$1" "transfer(address,uint)(bool)" "$2" "$x"
else
  seth send "$1" "transferFrom(address,address,uint)(bool)" "$4" "$2" "$x"
fi
